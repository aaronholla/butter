generator photon {
  provider = "photonjs"
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://aaron@localhost:5432/butter_development?schema=public"
}

model Movie {
  id    String @default(cuid()) @id @unique
  title String
  vote  Vote[]
}

model User {
  id    String  @default(cuid()) @id @unique
  email String  @unique
  name  String?
  vote  Vote[]
}

model Vote {
  id    String  @default(cuid()) @id @unique
  movie Movie
  scene Boolean
  user  User
}